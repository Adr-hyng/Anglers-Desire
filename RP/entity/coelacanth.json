{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "yn:coelacanth",
      "materials": { "default": "salmon", "solid": "entity" },
      "textures": {
        "default": "textures/entity/coelacanth"
      },
      "geometry": {
        "default": "geometry.coelacanth"
      },
      "scripts": {
        "initialize": [
          "v.last_anim_time = 0;",
          "v.x_rotation = 0;"
        ],
        "pre_animation": [
          "variable.zrot = !query.is_in_water ? Math.cos((query.time_stamp + query.frame_alpha) * 14.32) * 90 : 0.0;",
          "variable.roll=q.modified_move_speed*q.target_y_rotation;",
          "variable.current_anim_time = q.anim_time;",
          "variable.last_anim_time = ((v.current_anim_time - v.last_anim_time >= 1.605) ? v.current_anim_time : v.last_anim_time);",
          "v.target_x_rotation = Math.clamp(q.body_x_rotation, -5, 5);",
          "v.is_turning = Math.abs(q.body_x_rotation) > 0.1;", 
          "v.x_rotation = v.is_turning ? v.target_x_rotation : v.x_rotation * 0.9;",
          "v.x_rotation = Math.clamp(v.x_rotation * 0.9 + v.target_x_rotation * 0.1, -15, 15);",
          "variable.moving = query.ground_speed > 0 || query.vertical_speed > 0;"
        ],
        "animate": [
          "flap",
          "pitch",
          {
            "idle": "(!v.moving && q.is_in_water) || (!query.is_in_water && !q.is_on_ground)"
          },
          {
            "swim": "v.moving && q.is_in_water"
          },
          {
            "flop": "!query.is_in_water && q.is_on_ground"
          }
        ]
      },
      "animations": {
        "pitch": "animation.pitch_n_roll",
        "swim": "animation.coelacanth.swim",
        "idle": "animation.coelacanth.idle",
        "flap": "animation.coelacanth.flap",
        "flop": "animation.coelacanth.flop"
      },
      "render_controllers": [ "controller.render.salmon" ],
      "spawn_egg": {
         "base_color": "#5e9ac6",
        "overlay_color": "#b2cbdd"
      }
    }
  }
}
