{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "sp:splashfoam",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particle/particles"
			}
		},
		"events": {
			"ripple": {
				"particle_effect": {
					"effect": "sp:ripple",
					"type": "emitter"
				}
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": "variable.max_count"
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 1
			},
			"minecraft:emitter_shape_disc": {
				"offset": [0, "math.random(v.min_y_offset, v.max_y_offset)", 0],
				"radius": "v.width",
				"plane_normal": "y",
				"direction": ["(v.particle_random_1-0.5)/2", "0.75+v.particle_random_3*0.5", "(v.particle_random_2-0.5)/2"]
