			"minecraft:particle_expire_if_in_blocks": ["minecraft:water"],
			"minecraft:particle_lifetime_events": {
				"expiration_event": "ripple"
			},
			"minecraft:particle_initial_speed": "math.random(v.min_lifetime, v.max_lifetime)",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["math.random(-1, 1)", "v.gravity", "math.random(-1, 1)"]
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.5/16", "0.5/16"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 128,
					"texture_height": 128,
					"uv": [4, 4],
					"uv_size": [1, 1]
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_radius": 0,
				"expire_on_contact": true
			},
			"minecraft:particle_appearance_lighting": {}
		}
	}
}